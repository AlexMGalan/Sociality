<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textColor="#0000FF"
            android:textStyle="bold"
            android:textSize="18sp"

            />

        <EditText
            android:id="@+id/edDate"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:ems="10"
            android:gravity="center"
            android:background="@layout/roundedcorner"
            android:hint="--/--/----"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageButton android:id="@+id/button_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera"
            android:layout_below="@+id/date"
            android:layout_toEndOf="@+id/edDate"
            android:src="@mipmap/camera48" />

        <ImageView
            android:id="@+id/image_Camera"
            android:contentDescription="@string/image_cd_camera"
            android:layout_toRightOf="@+id/button_camera"
            android:rotation="90"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/Loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edLoc"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:gravity="center"
        android:background="@layout/roundedcorner"
        android:hint="Location" />
    <TextView
        android:id="@+id/Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Type:"
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:entries="@array/incident_arrays"
            android:prompt="@string/country_prompt"
            android:background="@layout/roundedcorner"/>

    <TextView
        android:id="@+id/Per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person :"
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edPer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:gravity="center"
        android:background="@layout/roundedcorner"
        android:hint="Enter Sex, Race, Age" />

    <TextView
        android:id="@+id/Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edDesc"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:gravity="center"
        android:background="@layout/roundedcorner"
        android:hint="Further Information" />

    <TextView
        android:id="@+id/Sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent by: alex.galan.au@gmail.com"
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_small_material" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            />
</LinearLayout>
