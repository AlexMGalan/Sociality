<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:weightSum="1" >

    <TextView
        android:id="@+id/tvAbout"
        android:text="@string/About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|normal"
        android:gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_launcher_soc"
        android:layout_weight="0.40"
        android:layout_gravity="center" />

    <TextView android:text="@string/app_name"
        android:id="@+id/tvSociality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|normal"
        android:textSize="20dp"
        android:gravity="center" />

    <TextView android:text="@string/Version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|normal"
        android:textSize="20sp"
        android:id="@+id/tvVer"
        android:layout_gravity="center_vertical"
        android:gravity="center"  />

    <TextView android:text="@string/Copyright"
        android:id="@+id/tvCopyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"  />

    <TextView android:text="@string/DevMsg"
        android:id="@+id/tvDevMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvEmail"
        android:text="Email:"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textStyle="bold|normal" />

        <TextView
            android:id="@+id/tvEmail2"
            android:text="@string/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvTwitter"
            android:text="@string/Twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|normal"
            android:layout_below="@+id/tvEmail2"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvTwitter2"
            android:text="@string/AcaciaSoftware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:padding="10dp"
            android:layout_below="@+id/tvTwitter"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



</LinearLayout>
